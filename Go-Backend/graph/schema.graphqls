
type User {
	ID:   Int! 
	Name: String!
	Age:  Int!
}

type Order {
	ID:    Int! 
	Name:  String!
	Desc:  String!
	Image: String!
}

type UserQuery {
  users: [User!]!
}

type OrderQuery {
  orders: [Order!]!
}

input NewUser {
  Name: String!
  Age:  Int!
}

input NewOrder {
  Name:  String!
  Desc:  Int!
  Image: String!
}

type Mutation {
  createUser(input: NewUser!): User!
  createOrder(input: NewOrder!): Order!
}
